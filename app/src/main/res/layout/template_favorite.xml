<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item"
    android:padding="5dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_img"
        android:layout_width="@dimen/small_ware_img_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@null"
        app:viewAspectRatio="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/sdv_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/ware_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            style="@style/line_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_price"
                style="@style/ware_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <Button
                android:id="@+id/btn_remove"
                style="@style/smallGreyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/btn_like"
                android:text="删 除" />

            <Button
                android:id="@+id/btn_like"
                style="@style/smallRedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="找相似" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
