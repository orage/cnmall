<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.oranges.cnmall.widget.MyToolBar
        android:id="@+id/tb_home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:isShowSearchView="false"
        app:title="分类" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_category"
            android:layout_width="@dimen/category_layout_width"
            android:layout_height="fill_parent"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:orientation="vertical">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/sl_category_slider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/category_slider_height"
                app:auto_cycle="true"
                app:indicator_visibility="visible"
                app:pager_animation="Accordion"
                app:pager_animation_span="1100" />

            <com.cjj.MaterialRefreshLayout
                android:id="@+id/mrl_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                app:overlay="false"
                app:progress_colors="@array/material_colors"
                app:progress_show_circle_backgroud="false"
                app:wave_height_type="higher"
                app:wave_show="false">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_wares"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.cjj.MaterialRefreshLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>